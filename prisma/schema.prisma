// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Users {
    id String @id @default(cuid())
    name String
    secret String 
    role String
    createdAt DateTime @default(now()) 
    updatedAt DateTime @default(now())
}

model Customers {
    id String @id @default(cuid())
    name String
    slug String
    whatsappLink String?
    contractLink String?
    scheduleLink String?
    galleryLink String?
    presentationText String?
    archivedAt DateTime?
    userId String
    createdAt DateTime @default(now()) 
    updatedAt DateTime @default(now())
}
